<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Rechercher un activit√©</h5>
                </div>
                <div class="card-body">
                    {{ form_start(formChercherEvenement) }}
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Date entre</label>
                            {{form_widget(formChercherEvenement.date_evenement_debut)}}
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Et</label>
                            {{form_widget(formChercherEvenement.date_evenement_fin)}}
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Evenement pour</label>
                            {{form_widget(formChercherEvenement.type_evenement)}}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Budget entre</label>
                            {{form_widget(formChercherEvenement.budget_evenement_min)}}
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Et</label>
                            {{form_widget(formChercherEvenement.budget_evenement_max)}}
                        </div>
                        {{form_row(formChercherEvenement.current_position)}}
                        {{form_row(formChercherEvenement.position_value)}}
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Lieu</label>
                            {{form_widget(formChercherEvenement.lieu_evenement)}}
                        </div>

                       {# <label class="form-check-label" for="inputEmail4">{{form_label(formChercherEvenement.current_position)}}</label>#}
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Rechercher</button>
                        </div>
                    </div>
                    {{form_end(formChercherEvenement)}}
                </div>
            </div>
        </div>
    </div>
</div>