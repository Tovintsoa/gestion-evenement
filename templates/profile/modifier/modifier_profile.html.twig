<div class="col-xl-9 col-lg-8 col-md-6 col-sm-12 col-xs-12">
    <div class="card">
        <div class="card-header">
            <h5>Modifier</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class=" row">
                    <div class="form-group col-6">
                        {{ form_label(form.mailUtilisateur) }}
                        {{ form_widget(form.mailUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.loginUtilisateur) }}
                        {{ form_widget(form.loginUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.nomUtilisateur) }}
                        {{ form_widget(form.nomUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.prenomUtilisateur) }}
                        {{ form_widget(form.prenomUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.adresseUtilisateur) }}
                        {{ form_widget(form.adresseUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.dateDeNaissanceUtilisateur) }}
                        {{ form_widget(form.dateDeNaissanceUtilisateur) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.password.first) }}
                        {{ form_widget(form.password.first) }}
                    </div>
                    <div class="form-group col-6">
                        {{ form_label(form.password.second) }}
                        {{ form_widget(form.password.second) }}
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>