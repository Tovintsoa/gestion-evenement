<div class="col-xl-9 col-lg-8 col-md-6 col-sm-12 col-xs-12 ">
    <h5 class="">
        {% if app.user.nomUtilisateur == null and app.user.prenomUtilisateur == null %}
            @{{app.user.loginUtilisateur }}
        {% else %}

            {{app.user.prenomUtilisateur  ~ app.user.prenomUtilisateur }}
        {% endif %}
    </h5>
    <div class="">
        <a href="{{ path("modifierProfile") }}" class="btn btn-secondary">Modifier le profil</a>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            <h5>Information Personelle</h5>
        </div>
        <div class="card-body row">
            <div class="col-4   py-4 border-bottom"><b>Login</b></div>
            <div class="col-8    py-4 text-center border-bottom">{{app.user.loginUtilisateur}}</div>
            <div class="col-4    py-4 border-bottom"><b>Nom</b></div>
            <div class="col-8   py-4 text-center border-bottom">{{app.user.nomUtilisateur ?? " - "}}</div>
            <div class="col-4   py-4 border-bottom"><b>Prenom</b></div>
            <div class="col-8    py-4 text-center border-bottom">{{app.user.prenomUtilisateur ?? " - "}}</div>
            <div class="col-4   py-4 border-bottom"><b>Adresse</b></div>
            <div class="col-8   py-4 text-center border-bottom">{{app.user.adresseUtilisateur ?? " - "}}</div>
            <div class="col-4    py-4 border-bottom"><b>Date de naissance</b></div>
            <div class="col-8   py-4 text-center border-bottom">{{ app.user.dateDeNaissanceUtilisateur|format_date(locale='fr') }}</div>
            <div class="col-4   py-4 "><b>E-mail</b></div>
            {% if app.user.activationCompte == true %}
            <div class="col-8   py-4 text-center ">{{app.user.mailUtilisateur ?? " - "}} <span class="badge badge-pill  badge-success   ml-2"><i class="fas  fa-check   mr-1"></i>Verifier</span></div>
            {% else %}
                <div class="col-8   py-4 text-center ">{{app.user.mailUtilisateur ?? " - "}} <span class="badge badge-pill    badge-danger  ml-2"><i class="fas   fa-times  mr-1"></i>Pas verifier</span> <a href="{{ path("app_verifyAccount") }}">Verifier votre compte </a></div>
            {% endif %}
        </div>
    </div>
</div>